# Copy this file to docker/.env and adjust values before running docker compose.

# Runtime configuration
NODE_ENV=production
PORT=3001
COMPANY_NAME=SkyPanel
COMPANY_BRAND_NAME=SkyPanel
VITE_COMPANY_NAME=SkyPanel
JWT_SECRET=please-change-me
JWT_EXPIRES_IN=7d
SSH_CRED_SECRET=replace-with-32-char-secret
TRUST_PROXY=loopback

# Database connection (matches postgres service in docker-compose.yml)
DATABASE_URL=postgresql://skypanel:skypanel@postgres:5432/skypanel
POSTGRES_DB=skypanel
POSTGRES_USER=skypanel
POSTGRES_PASSWORD=skypanel

# Redis connection (matches redis service in docker-compose.yml)
REDIS_URL=redis://default@redis:6379

# PayPal sandbox defaults
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# SMTP configuration (optional for local testing)
SMTP2GO_API_KEY=your-smtp-api-key
SMTP2GO_USERNAME=noreply@example.com
SMTP2GO_PASSWORD=your-smtp-password
FROM_EMAIL=noreply@example.com
FROM_NAME=SkyPanel Support
SMTP2GO_HOST=mail.smtp2go.com
SMTP2GO_PORT=2525
SMTP2GO_SECURE=false
SMTP2GO_REQUIRE_TLS=true

# Additional application settings and provider secrets (placeholders)
# Add client URL used by the frontend/dev tooling
CLIENT_URL=http://localhost:5173
# Email used for tests and system notifications
TEST_EMAIL=test@skyvps360.xyz
# Contact form submission recipient
CONTACT_FORM_RECIPIENT=support@skyvps360.xyz

# Provider API tokens (set these to real tokens in production)
LINODE_API_TOKEN=your-linode-api-token
LINODE_API_URL=https://api.linode.com/v4
DIGITALOCEAN_API_TOKEN=your-digitalocean-api-token

# Encryption key used for storing provider/SSH credentials (32+ chars)
ENCRYPTION_KEY=your-32-character-encryption-key